# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Mutation {
  createTask(data: Todo!): Message!
  changeTaskStatus(data: ChangeStatus!): Message!
}

input Todo {
  id: ID!
  tasks: String!
}

input ChangeStatus {
  id: ID!
  isChecked: Boolean!
}

type Message {
  msg: String!
}

type Query {
  getTasks(id: ID!): [Tasks!]!
}

type Tasks {
  task: String!
  isChecked: Boolean!
  ID: ID!
}
